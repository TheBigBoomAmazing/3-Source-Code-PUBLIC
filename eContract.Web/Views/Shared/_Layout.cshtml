    var count = 0;
    function hideModal() {
        $("#modalContent").modal("hide");
    }
    $("#modalContent").on("hidden.bs.modal", function () {
        if (count != 1) {
            $("#modalContent").modal("hide");
            $(this).removeData("bs.modal");
            $(".modal-backdrop").remove();
            $(this).find("#parentModalContent").children().remove();
            count = 0;
