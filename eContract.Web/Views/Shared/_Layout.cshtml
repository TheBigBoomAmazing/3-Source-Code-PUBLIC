                            <li><a href="@Url.Content("~/Account/Login")">登陆</a></li>
                            <li><a href="@Url.Content("~/Account/Register")">注册</a></li>
                        }
                        @if (currentUser != null)
                        {
                            <li><a href="@Url.Content("~/Account/LogOff")">安全退出</a></li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">@currentUser.CasUserEntity.ChineseName<b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="@Url.Content("~/LUBR/MyAccount?userid="+currentUser.CasUserEntity.UserId)">账户首页</a></li>
                                    <li><a href="#">充值提现</a></li>
                                    <li><a href="#">奖励管理</a></li>
                                    <li class="divider"></li>
                                    <li class="nav-header">中心</li>
                                    <li><a href="@Url.Content("~/LUBR/User/SecurityCenter?userid="+currentUser.CasUserEntity.UserId)">安全中心</a></li>
                                    <li><a href="#">消息中心</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 磐石资金管理</p>
        </footer>
    </div>
